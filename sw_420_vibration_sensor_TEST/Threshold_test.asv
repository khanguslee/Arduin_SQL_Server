clc
clear all
close all

filename = 'TEST_Threshold_1.dat';
threshold_1 = csvread(filename);

x = 1:length(threshold_1);

figure
plot(x,threshold_1)
ylim([-0.5 1.5])
title('Sensor output when threshold = 1')
xlabel('n')
ylabel('Sensor digital output')

